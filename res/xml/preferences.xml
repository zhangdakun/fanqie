<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="时间设置">
        <ListPreference android:entries="@array/TomatoTime" android:title="番茄时间" android:key="TomatoTime_value" android:dialogTitle="选择" android:entryValues="@array/TomatoTime_value" />
        <ListPreference android:entries="@array/BreakTime" android:title="休息时间" android:key="BreakTime_value" android:dialogTitle="选择" android:entryValues="@array/BreakTime_value" />
    </PreferenceCategory>
    <PreferenceCategory android:title="其他设置">
        <CheckBoxPreference android:title="震动" android:key="startShake" />
        <Preference android:title="提示音" android:key="pref_ringtone" android:summary="结束提示音" android:ringtoneType="notification" />
        <Preference android:title="清除计数" android:key="clearCount" android:summary="清除统计的番茄数" />
        <CheckBoxPreference android:title="开发者模式" android:key="developer_Mode" android:summary="以一分钟番茄进行计时" />
    </PreferenceCategory>
    <PreferenceCategory android:title="关于">
        <PreferenceScreen android:title="关于" android:key="screen_preference" android:summary="作者以及作品说明">
            <PreferenceCategory android:title="关于作者">
                <Preference android:title="作者" android:key="aboutAuthor" android:summary="豆包工作室" />
                <Preference android:title="E-Mail" android:key="eMail" android:summary="2745695368@qq.com" />
                <Preference android:title="支持作者" android:key="supportAuthor" android:summary="支付宝:2745695368@qq.com" />
            </PreferenceCategory>
            <PreferenceCategory android:title="关于作品">
                <Preference android:title="灵感来源" android:key="afflatusFrom" android:summary="来源于一款名为“极简番茄”的应用" />
                <Preference android:title="作品说明" android:key="workDescription" android:summary="本应用为作者的第一款应用,如有不足之处,还望邮件告知，万分感谢！" />
                <Preference android:title="关于番茄工作法" android:key="aboutTomatoTask" android:summary="点击进入：番茄工作法_百度百科" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>